<div class="news-container">
    <div class="sidebar">
        <h2 class="sidebar-title">Articles</h2>
        <ul class="article-list">
            <% articles.forEach(article => { %>
                <li class="article-list-item">
                    <a href="/news/<%= article.id %>" class="article-list-link"><%= article.title %></a>
                </li>
            <% }); %>
        </ul>
    </div>

    <div class="main-content">
        <% if (article) { %>
            <div class="article-header">
                <h1 class="article-title"><%= article.title %></h1>
                <p class="article-date">Publi√© le <%= new Date(article.created_at).toLocaleDateString() %></p>
            </div>
            <div class="article-body">
                <p><%- article.content %></p>
            </div>

            <!-- Section des r√©actions (visible si connect√©) -->
            <% if (user) { %>
                <div class="reactions">
                    <form action="/news/<%= article.id %>/reaction" method="post">
                        <button name="reaction" value="heart" class="reaction-btn" style="background-color: <%= userReaction === 'heart' ? '#ff9999' : '#e0e0e0' %>">‚ù§Ô∏è</button>
                        <button name="reaction" value="laugh" class="reaction-btn" style="background-color: <%= userReaction === 'laugh' ? '#ff9999' : '#e0e0e0' %>">üòÇ</button>
                        <button name="reaction" value="wow" class="reaction-btn" style="background-color: <%= userReaction === 'wow' ? '#ff9999' : '#e0e0e0' %>">üòÆ</button>
                    </form>
                </div>

                <!-- Section des commentaires (visible si connect√©) -->
                <div class="comments-section">
                    <h3 class="comments-title">Commentaires</h3>
                    <ul class="comments-list">
                        <% comments.forEach(comment => { %>
                            <li class="comment-item">
                                <div class="comment-author"><%= comment.username %> :</div>
                                <div class="comment-content"><%= comment.content %></div>
                                <% if (user && comment.user_id === user.id) { %>
                                    <form action="/delete-comment/<%= comment.id %>" method="post" class="delete-comment-form">
                                        <button type="submit" class="delete-comment-btn">üóëÔ∏è</button>
                                    </form>
                                <% } %>
                            </li>
                        <% }); %>
                    </ul>

                    <form action="/news/<%= article.id %>/comment" method="post" class="comment-form">
                        <textarea name="content" placeholder="Ajouter un commentaire"></textarea>
                        <button type="submit" class="comment-submit-btn">Commenter</button>
                    </form>
                </div>
            <% } else { %>
                <p>Connectez-vous pour r√©agir ou commenter cet article.</p>
            <% } %>
        <% } else { %>
            <p>S√©lectionnez un article pour voir son contenu.</p>
        <% } %>
    </div>
</div>

